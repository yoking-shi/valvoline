<div class="row align-items-center justify-content-center users-new-row">
  <div class="col-4">
    <%= form_tag change_password_users_path, method: :put, id: 'forget-password-form' do %>
      <div class="error-tips <%= flash[:alert].present? ? 'show' : 'hide' %>">
        <%= flash[:alert] %>
      </div>
      <div class="form-row">
        <div class="col-12">
          <label for="account">用户账号：</label>
          <%= text_field_tag :account, '', class: 'form-control', placeholder: '请输入用户账号' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-12">
          <label for="certificate">修改凭证:</label>
          <%= password_field_tag :certificate, '', class: 'form-control', placeholder: '请输入邮箱、QQ、手机号码中一项' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-12">
          <label for="password">密码:</label>
          <%= password_field_tag :password, '', class: 'form-control', placeholder: '请输入密码' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-12">
          <label for="password_confirmation">确认密码:</label>
          <%= password_field_tag :password_confirmation, '', class: 'form-control', placeholder: '请输入确认密码' %>
        </div>
      </div>
      <div class="form-row">
        <div class="col-12">
          <label for="mobile">验证码:</label>
          <%= rucaptcha_input_tag(class: 'form-control', placeholder: '请输入验证码') %>
          <%= rucaptcha_image_tag(alt: 'Captcha', class: 'captcha') %>
        </div>
      </div>
      <button class="btn btn-primary btn-block" id="sign_up_form_submit" type="submit">立即修改密码</button>
    <% end %>
  </div>
</div>
